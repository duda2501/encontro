@model IEnumerable<EncontroCampistas.Biblioteca.Entidades.Campista>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrativo/Views/Shared/_AdministrativoLayout.cshtml";
}

<div class="alert alert-success" id="mensagem"></div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Encontro Campistas - Administrivo - Campistas</h3>
    </div>
    <div class="panel-body">
        @Html.ActionLink("Novo campista", "NovoCampista", "Campista", new { @class = "btn btn-default" })

        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="text-right">#Id</th>
                    <th>Nome</th>
                    <th>Endereço</th>
                    <th>Número</th>
                    <th>Complemento</th>
                    <th>Bairro</th>
                    <th>Cidade</th>
                    <th>Telefone</th>
                    <th>Celular</th>
                    <th class="text-center">Excluir</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row-@item.CampistaId">
                        <td class="text-right">
                            # @item.CampistaId
                        </td>
                        <td>
                            @Html.ActionLink(item.Nome, "Alterar", new { item.CampistaId })
                        </td>
                        <td>
                            @item.Endereco
                        </td>
                        <td>
                            @item.Numero
                        </td>
                        <td>
                            @item.Complemento
                        </td>
                        <td>
                            @item.Bairro
                        </td>
                        <td>
                            @item.Cidade
                        </td>
                        <td>
                            @item.Telefone
                        </td>
                        <td>
                            @item.Celular
                        </td>
                        <td class="text-center">
                            <input type="submit" class="btn btn-default btn-xs" id="@item.CampistaId" name="@item.Nome]" value="Excluir" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@Html.Partial("Confirmacao")

