@model IEnumerable<EncontroCampistas.Biblioteca.Entidades.Evento>

@{
    ViewBag.Title = "Administrativo - Eventos";
    Layout = "~/Areas/Administrativo/Views/Shared/_AdministrativoLayout.cshtml";
}

<div id="divexcluir"></div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Encontro de Campistas - Área Administriva - Eventos</h3>
    </div>
    <div class="panel-body">
        @Html.ActionLink("Novo evento", "NovoEveto", "Evento", new { @class = "btn btn-default" })

        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="text-right">#Id</th>
                    <th>Evento</th>
                    <th class="text-right">Local</th>
                    <th class="text-right">Data</th>
                    <th class="text-center">Excluir</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row-@item.EventoId">
                        <td class="text-right">
                            # @item.EventoId
                        </td>
                        <td>
                            @Html.ActionLink(item.Descricao, "Alterar", new { item.EventoId })
                        </td>
                        <td>
                            @item.Local
                        </td>
                        <td>
                            @item.DataHoraRealizacao
                        </td>
                        <td class="text-center">
                            @*@using (Html.BeginForm("Excluir", "Produto"))
                                {
                                    @Html.Hidden("ProdutoId", item.ProdutoId)
                                    <input type="submit" class="btn btn-default btn-xs" value="Excluir"/>
                                }*@

                            <input type="submit" class="btn btn-default btn-xs" id="@item.EventoId" name="@item.Descricao" value="Excluir" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@Html.Partial("Confirmacao")
